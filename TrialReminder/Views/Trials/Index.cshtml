@model List<Trial>

<h2>Your Trials</h2>


@foreach (var trial in Model)
{
    <div class="card" >
        <div class="card-body">
            <h5 class="card-title">@trial.ServiceName</h5>
            <h6 class="card-subtitle mb-2 text-muted">You have a trial at @trial.ServiceName</h6>
            <h6 class="card-subtitle mb-2 text-muted">They are at @trial.Url</h6>
            @if(trial.StartDate.HasValue)
            {
                <p>Your trial started on @trial.StartDate.Value.ToShortDateString()</p>
            }
            @if(trial.EndDate.HasValue)
            {
                <p>Your trial ends on @trial.EndDate.Value.ToShortDateString()</p>
            }

            <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a>
        </div>
    </div>
}
